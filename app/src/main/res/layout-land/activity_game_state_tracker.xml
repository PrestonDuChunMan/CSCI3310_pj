<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameStateTrackerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#403C3C"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="0dp">

            <!-- score -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/homeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="HOME"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/homeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#64B5F6"
                        android:textSize="90sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/digital" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/awayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AWAY"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/awayScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:textColor="#64B5F6"
                        android:textSize="90sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/digital" />
                </LinearLayout>
            </LinearLayout>

            <!-- Clocks -->
            <TextView
                android:id="@+id/gameTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="10:00"
                android:textColor="#FFFFFF"
                android:textSize="120sp"
                android:fontFamily="@font/digital"
                android:gravity="center"
                android:minWidth="200dp"
                android:padding="8dp"
                android:background="@drawable/clock_border" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/resetShotClock24"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="24"
                    android:textSize="22sp"
                    android:backgroundTint="#FF0000"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/shotClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24"
                    android:textColor="#F06292"
                    android:textSize="90sp"
                    android:fontFamily="@font/digital"
                    android:gravity="center"
                    android:minWidth="130dp"
                    android:padding="8dp"
                    android:background="@drawable/clock_border" />

                <Button
                    android:id="@+id/resetShotClock14"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:text="14"
                    android:textSize="22sp"
                    android:backgroundTint="#FF0000"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone">

                <!-- following needed for adapting the .java code -->
                <Button
                    android:id="@+id/homeAdd1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/homeSubtract"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/awayAdd1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/awaySubtract"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/startTime"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/pauseTime"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- offcanvas -->
    <LinearLayout
        android:id="@+id/settings_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="#403C3C"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Game Settings"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Game Duration (minutes)"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <SeekBar
            android:id="@+id/game_duration_slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:max="20"
            android:progress="10" />

        <TextView
            android:id="@+id/game_duration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="10 minutes"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Shot Clock Duration (seconds)"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioGroup
                android:id="@+id/shot_clock_radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shot_clock_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24s"
                    android:textColor="#FFFFFF"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/shot_clock_30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="30s"
                    android:textColor="#FFFFFF"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:baselineAligned="false">

            <Button
                android:id="@+id/resetGame"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:text="RESET ALL"
                android:textSize="16sp"
                android:padding="0dp"
                android:backgroundTint="#FF0000"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/apply_settings_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:padding="0dp"
                android:backgroundTint="#43A047"
                android:text="Apply Changes"
                android:textSize="16sp"
                android:textColor="#FFFFFF" />
        </LinearLayout>


    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
