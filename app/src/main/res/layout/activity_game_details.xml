<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/teamSwitchLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/gameNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Game Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Player Stats Section - Now First -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player Stats"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <HorizontalScrollView
                android:id="@+id/statsHeaderScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:scrollbars="none">

                <TableLayout
                    android:id="@+id/statsHeaderTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:stretchColumns="*">

                    <TableRow>
                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="PTS"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="FG"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="FG%"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="3PT"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="3PT%"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="FT"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:text="FT%"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="REB"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="AST"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="STL"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="BLK"
                            android:textStyle="bold"
                            android:padding="4dp" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="TO"
                            android:textStyle="bold"
                            android:padding="4dp" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/playersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp" />

            <!-- Top Performers Section - Now Second -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/topPerformersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Top Performers" />
            </androidx.cardview.widget.CardView>

            <!-- Team Comparison Section - Now Third -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/comparisonTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="Team Comparison" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/teamSwitchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/teamAButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team A"
            android:backgroundTint="@android:color/black"
            android:textColor="@android:color/white"
            android:enabled="false" />

        <Button
            android:id="@+id/teamBButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Team B"
            android:backgroundTint="#F0F0F0"
            android:textColor="@android:color/black" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
